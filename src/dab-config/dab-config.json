{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": ["*"],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "AzureAD",
        "jwt": {
          "audience": "api://@env('AZURE_AD_CLIENT_ID')",
          "issuer": "https://sts.windows.net/@env('AZURE_AD_TENANT_ID')/"
        }
      },
      "mode": "production"
    }
  },
  "entities": {
    "Category": {
      "source": {
        "object": "Categories",
        "type": "table"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Category",
          "plural": "Categories"
        }
      },
      "rest": {
        "enabled": true,
        "path": "/Category"
      },
      "permissions": [
        {
          "role": "authenticated",
          "actions": [
            {
              "action": "read"
            }
          ]
        },
        {
          "role": "admin",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ],
      "relationships": {
        "railroadAccidents": {
          "cardinality": "many",
          "target.entity": "RailroadAccident",
          "source.fields": ["Id"],
          "target.fields": ["CategoryId"]
        },
        "bridges": {
          "cardinality": "many",
          "target.entity": "Bridge",
          "source.fields": ["Id"],
          "target.fields": ["CategoryId"]
        },
        "transitAgencies": {
          "cardinality": "many",
          "target.entity": "TransitAgency",
          "source.fields": ["Id"],
          "target.fields": ["CategoryId"]
        },
        "vehicleFatalities": {
          "cardinality": "many",
          "target.entity": "VehicleFatality",
          "source.fields": ["Id"],
          "target.fields": ["CategoryId"]
        }
      }
    },
