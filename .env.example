# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_RESOURCE_GROUP=rg-dab-demo
AZURE_LOCATION=eastus

# Azure Container Registry
ACR_NAME=youracrname
ACR_LOGIN_SERVER=youracrname.azurecr.io

# Azure SQL Database
SQL_SERVER_NAME=your-sql-server
SQL_DATABASE_NAME=dabdemo
SQL_ADMIN_USER=sqladmin
# SQL_ADMIN_PASSWORD - Set via Azure Key Vault or secure method

# Data API Builder
DAB_CONFIG_PATH=/app/dab-config.json
DAB_HOST_MODE=Production

# Entra ID (Azure AD) Authentication
AZURE_AD_CLIENT_ID=your-app-client-id
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# Frontend Configuration
VITE_API_BASE_URL=https://your-dab-endpoint/api
VITE_GRAPHQL_URL=https://your-dab-endpoint/graphql
VITE_AZURE_AD_CLIENT_ID=your-frontend-client-id
VITE_AZURE_AD_TENANT_ID=your-tenant-id

# Container Instances
ACI_DAB_NAME=aci-dab-demo
ACI_FRONTEND_NAME=aci-frontend-demo
ACI_CPU_CORES=1
ACI_MEMORY_GB=1.5

# Storage Account (for persistent storage)
STORAGE_ACCOUNT_NAME=yourstorageaccount
FILE_SHARE_NAME=dab-data
